<%= bootstrap_form_for @event, layout: :horizontal do |f| %>
  <%= f.alert_message "Please fix the errors below." %>


  <%= f.text_field :title %>
  <%= f.text_field :date %>
  <%= f.text_area :instructions %>

  <%= f.form_group do %>
    <%= f.check_box :permit_participations %>
  <% end %>

  <%= f.form_group do %>
      <%= f.submit :class => 'btn btn-primary'  %>
  <% end %>

<% end %>